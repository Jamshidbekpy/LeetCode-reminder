BOT_TOKEN=xxxxyyyzzzz:AAAbbbCCCdddEEEfffGGGhhhIIIjjjKKKlllMMM

# Redis — local: localhost:6379 | Docker/Production: redis host nomi
REDIS_URL=redis://redis:6379/0

# PostgreSQL — docker-compose postgres va app bir xil parolni ishlatadi.
# Parol xato bo'lsa: eski volume boshqa parol bilan yaratilgan. Hal: docker compose down -v && docker compose up -d
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=leetcode_bot
# Local: localhost | Docker: postgres (compose da URL avtomatik shu qiymatlar bilan yoziladi)
POSTGRESQL_URL=postgresql://postgres:postgres@postgres:5432/leetcode_bot

# Scheduler loop
POLL_SECONDS=30

# LeetCode tekshiruvni har user uchun qanchada bir qilish (sekund)
LC_CHECK_SECONDS=300

# Default sozlamalar (user hali o'rnatmagan bo'lsa)
DEFAULT_TZ=Asia/Tashkent
DEFAULT_REMIND_TIMES=20:00

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8085

# Celery settings
USE_CELERY=true
CELERY_CHECK_INTERVAL=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security (Production)
# API_KEY=your-secure-api-key-here
# ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com